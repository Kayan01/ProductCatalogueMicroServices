services:
  apigateway:
    build:
      context: C:\Users\Charity\ProductCatalogSystem
      dockerfile: ApiGateway/Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_HTTPS_PORTS: '8081'
      ASPNETCORE_HTTP_PORTS: '8080'
    image: apigateway
    ports:
    - published: 8080
      target: 80
    - published: 8081
      target: 443
    volumes:
    - C:\Users\Charity\AppData\Roaming\ASP.NET\Https:/home/app/.aspnet/https:ro
    - C:\Users\Charity\AppData\Roaming\Microsoft\UserSecrets:/home/app/.microsoft/usersecrets:ro
  authenticationdb:
    container_name: authenticationdb
    environment:
      ACCEPT_EULA: "Y"
      SA_PASSWORD: SwN12345678
    image: mcr.microsoft.com/mssql/server:2017-latest
    ports:
    - published: 1433
      target: 1433
  catalog.authenticationservice:
    build:
      context: C:\Users\Charity\ProductCatalogSystem
      dockerfile: AuthenticationService/Dockerfile
    depends_on:
      authenticationdb:
        condition: service_started
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_URLS: https://+:443;http://+:80
      ConnectionString: Server=authenticationdb;Database=AuthDB;User Id=sa;Password=SwN12345678
    image: authenticationservice
    ports:
    - published: 8004
      target: 80
  catalog.productservice:
    build:
      context: C:\Users\Charity\ProductCatalogSystem
      dockerfile: ProdService/Dockerfile
    depends_on:
      productdb:
        condition: service_started
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ConnectionString: Server=productdb;Port=5432;Database=DiscountDb;User Id=admin;Password=admin1234;
    image: productservice
    ports:
    - published: 8002
      target: 80
  pgadmin:
    container_name: pgadmin
    environment:
      PGADMIN_DEFAULT_EMAIL: admin@aspnetrun.com
      PGADMIN_DEFAULT_PASSWORD: admin1234
    image: dpage/pgadmin4
    ports:
    - published: 5050
      target: 80
    volumes:
    - pgadmin_data:/root/.pgadmin:rw
  productdb:
    container_name: productdb
    environment:
      POSTGRES_DB: DiscountDb
      POSTGRES_PASSWORD: admin1234
      POSTGRES_USER: admin
    image: postgres
    ports:
    - published: 5432
      target: 5432
    volumes:
    - postgres_data:/var/lib/postgresql/data/:rw
version: '3.4'
volumes:
  pgadmin_data: {}
  postgres_data: {}